{
  "version": 2,
  "builds": [
    {
      "src": "NorthwindApp.API.csproj",
      "use": "microsoft/dotnet@latest",
      "config": {
        "projectFile": "NorthwindApp.API.csproj"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "ASPNETCORE_ENVIRONMENT": "Production",
    "ConnectionStrings__DefaultConnection": "@sql_server_connection"
  }
} 